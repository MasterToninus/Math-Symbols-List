%\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{commonmathsymb}[2017/01/13 Custom Package]

\RequirePackage{amssymb}
\RequirePackage{mathtools}% Loads amsmath
\RequirePackage{dsfont} % identity symbol

%% 'basic' option
\DeclareOption{basic}{
	%Number fields
		\providecommand{\Real}{\mathbb{R}}
		\providecommand{\Natural}{\mathbb{N}}
		\providecommand{\Relative}{\mathbb{Z}}
		\providecommand{\Rational}{\mathbb{Q}}
		\providecommand{\Complex}{\mathbb{C}}
		\providecommand{\KField}{\mathbb{K}}
		
%equality lingo
	%must be equal
		\providecommand{\mbeq}{\overset{!}{=}} 

% function
	%Domain
		\providecommand{\dom}{\mathit{dom}}
	%Range
		\providecommand{\ran}{\mathit{ran}}
	%Codomain
		\providecommand{\cod}{\mathit{cod}}
	%Identity Operator
		\providecommand{\IdOp}{\mathds{1}}
	%Identity Map
		\providecommand{\IdMap}{\textrm{id}}	
	%Identity Element
		\providecommand{\IdElem}{\mathds{I}}

% Set Theory
	% Power set (insieme delle parti
		\providecommand{\PowerSet}{\mathcal{P}}
		
% Set building http://math.stackexchange.com/questions/309506/symbol-for-such-that-not-in-set
		\providecommand{\st}{\quad\vert\quad}

}

%% 'TensorAlgebra' option
\DeclareOption{tensors}{
	\newcommand{\TensorSpace}{\mathcal{T}}
}

%% 'Differential Geometry' option
\DeclareOption{diffgeo}{
	% Atlas
		\providecommand{\Atlas}{\mathcal{A}}
	%support
		\providecommand{\supp}{\textrm{supp}}
	%set of tangent fields
		\providecommand{\FieldSet}{\mathfrak{X}}
}

%% 'Category Theory' option
	%http://katmat.math.uni-bremen.de/acc/acc.pdf
\DeclareOption{cat}{
	%Object set
		\providecommand{\Obj}{\mathit{Ob}}
	%set of arrows between two objects
		\providecommand{\mor}{hom}
	%set of all the arrows (morphisms) forming the category
		\providecommand{\Mor}{\mathit{Mor}}
	%set of isomorphism
		\providecommand{\iso}{\textrm{iso}}
		\providecommand{\Iso}{\mathit{Iso}}
}

%% 'Geometric Mechanics' option
\DeclareOption{geomec}{
	% Kinematic Configurations
		\providecommand{\Conf}{\mathtt{C}}
	%Solutions Space
		\providecommand{\Sol}{\mathtt{Sol}}
	%Lagrangian class
		\providecommand{\Lag}{\mathsf{Lag}}
	%Lagrangiana
		\providecommand{\Lagrangian}{\mathcal{L}}
	%Data
		\providecommand{\Data}{\mathsf{Data}}
	%unique solution map
		\providecommand{\SolMap}{\mathbf{s}}
	%Classical Observables
		\providecommand{\Obs}{\mathcal{E}}	
	%Phase Space
		\providecommand{\Phase}{\mathcal{M}}		
		
	%Peierls
		\providecommand{\EffectOp}{\mathbf{D}}	
}
	
%% 'Algebraic quantum theory' option
\DeclareOption{aqft}{
		\providecommand{\ObsAlg}{\mathit{A}}
}

%% 'Linear partial Differential Operators' option
\DeclareOption{ldpo}{
	%Green Operators
		\providecommand{\GreenRet}{G^+}
		\providecommand{\GreenAdv}{G^-}
	
	%Hom bundle
		\providecommand{\Hom}{\textrm{Hom}}
}

%% 'General Relativity' option
\DeclareOption{genrel}{
	%Chronological Past/Future
	\providecommand{\ChronoPast}{\mathbf{I}_M^-}
	\providecommand{\ChronoFut}{\mathbf{I}_M^+}
	\providecommand{\ChronoPM}{\mathbf{I}_M^\pm}

	%Causal Past/Future
	\providecommand{\CausalPast}{\mathbf{J}_M^-}
	\providecommand{\CausalFut}{\mathbf{J}_M^+}
	\providecommand{\CausalPM}{\mathbf{J}_M^\pm}	
	
	%Set of all cauchy surfaces
	\providecommand{\CauchyClass}{\PowerSet_C}
}

%% tells which are the default.
\ExecuteOptions{basic}

\ProcessOptions\relax





